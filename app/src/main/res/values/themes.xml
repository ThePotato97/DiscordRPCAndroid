<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DiscordRPCAndroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colors are handled by Jetpack Compose Material You -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
    
    <style name="Theme.DiscordRPCAndroid.Fullscreen" parent="Theme.DiscordRPCAndroid">
        <item name="android:windowFullscreen">false</item> <!-- Allow status bars for immersive look but visible -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>
